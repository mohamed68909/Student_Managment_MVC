@model Student_Managmet_MVC.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
}

<h1 class="text-danger mb-4">Delete Attendance</h1>

<div class="alert alert-warning">
    <h4 class="alert-heading">Are you sure you want to delete this record?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-3">Attendance</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsPresent ? "bg-success" : "bg-danger")">
                    @(Model.IsPresent ? "Present" : "Absent")
                </span>
            </dd>

            <dt class="col-sm-3">Student Name</dt>
            <dd class="col-sm-9">@Model.Student?.Name</dd>

            <dt class="col-sm-3">Student Email</dt>
            <dd class="col-sm-9">@Model.Student?.Email</dd>

            <dt class="col-sm-3">Course Name</dt>
            <dd class="col-sm-9">@Model.Course?.Name</dd>

            <dt class="col-sm-3">Credits</dt>
            <dd class="col-sm-9">@Model.Course?.Credits</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
