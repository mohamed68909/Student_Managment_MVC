@model Student_Managmet_MVC.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="text-danger mb-4">Delete Course</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this course?</strong> This action cannot be undone.
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Credits)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Credits)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
