@model Student_Managmet_MVC.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h1 class="mb-4 text-danger">Delete Enrollment</h1>

<h4 class="mb-3">Are you sure you want to delete this record?</h4>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Enrollment Date</dt>
        <dd class="col-sm-9">@Model.EnrollmentDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Student Email</dt>
        <dd class="col-sm-9">@Model.Student?.Email</dd>

        <dt class="col-sm-3">Course Credits</dt>
        <dd class="col-sm-9">@Model.Course?.Credits</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
