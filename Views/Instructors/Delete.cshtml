@model Student_Managmet_MVC.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<h1 class="text-danger mb-4">Delete Instructor</h1>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this instructor?</strong>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.HireDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.HireDate)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
